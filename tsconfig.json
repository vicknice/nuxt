{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@nuxt/content",
      "@nuxt/types",
      "@nuxtjs/auth-next",
      "@types/node",
      "nuxt-i18n",
      "testing-library__jest-dom"
    ]
  },
  "exclude": ["node_modules", ".nuxt"]
}
